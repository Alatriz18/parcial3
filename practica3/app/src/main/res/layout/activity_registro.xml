<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoinicial"
    android:onClick="registrarUsuario"
    tools:context=".RegistroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7240433B"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondoinicial"
            android:orientation="vertical"
            android:padding="20dp"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="218dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="REGISTRO DE USUARIO"
                android:textColor="#0B0A0A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="189dp"
                android:layout_height="93dp"
                android:layout_gravity="center"
                android:foregroundGravity="center_vertical"
                app:srcCompat="@drawable/addusuario" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="4dp" />

            <EditText
                android:id="@+id/txtApellidoRegistro"
                android:layout_width="337dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Ingrese su Apellido"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtNombreRegistro"
                android:layout_width="338dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Ingrese su Nombre"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtEmailRegistro"
                android:layout_width="338dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Ingrese su email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <EditText
                android:id="@+id/txtPasswordRegistro"
                android:layout_width="337dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Ingrese su contraseña"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtPasswordConfirmadaRegistro"
                android:layout_width="340dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="Confirme su contraseña"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtTelefonoRegistro"
                android:layout_width="340dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Numero Celular"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtDireccionRegistro"
                android:layout_width="340dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:hint="  Ingrese su Dirección"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="6dp" />

            <EditText
                android:id="@+id/txtFechaRegistro"
                style="@android:style/Widget.AutoCompleteTextView"
                android:layout_width="342dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/txt_border_redondeado"
                android:ems="10"
                android:gravity="center"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="331dp"
                    android:layout_height="match_parent"
                    android:background="#8103DAC5"
                    android:onClick="registrarUsuario"
                    android:text="Registrar cuenta" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="11dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="330dp"
                    android:layout_height="match_parent"
                    android:background="#6BFF4444"
                    android:onClick="cerrarPantallaRegistro"
                    android:text="Cancelar" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>