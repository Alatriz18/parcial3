<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoinicial"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="64dp"
        tools:layout_editor_absoluteY="177dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView48"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="GESTIÃ“N DE VENTAS"
            android:textColor="#0C0C0C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:paddingLeft="11dp"
            android:textColorHint="#090808"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView51"
                android:layout_width="185dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="Clientes:"
                android:textColorHint="#090808"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/listaCli"
                android:layout_width="190dp"
                android:layout_height="35dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView52"
                android:layout_width="186dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:foregroundGravity="center"
                android:gravity="center_vertical"
                android:paddingLeft="11dp"
                android:text="Productos:"
                android:textColorHint="#090808"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/listaPro"
                android:layout_width="187dp"
                android:layout_height="34dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <EditText
            android:id="@+id/cantidadVentas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Cantidad Productos:"
            android:inputType="number"
            android:paddingLeft="14dp"
            android:textColorHint="#EB5E5C5C"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/precioVentas"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:hint="Precio Total"
            android:paddingLeft="14dp"
            android:textColor="#0B0A0A"
            android:textColorHint="#121111"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:paddingLeft="11dp"
            android:textColorHint="#090808"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button16"
                android:layout_width="157dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:drawableLeft="@android:drawable/ic_menu_save"
                android:onClick="GuardarVentas"
                android:text="GUARDAR" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button17"
                android:layout_width="145dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:background="@android:color/holo_red_light"
                android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"
                android:text="CANCELAR" />

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView61"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:paddingLeft="11dp"
            android:textColorHint="#090808"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView62"
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <Button
            android:id="@+id/button20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="abrirVentasRealizadas"
            android:text="Ver lista de ventas" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>